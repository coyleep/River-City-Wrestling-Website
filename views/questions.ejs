    <div class="wrapper">
    <h1>Questions or Comments</h1>
    <form id="test-form" action="/questions" method="post">
    <div>
        <label for="name">Name</label>
        <input autocomplete="off" autofocus class="form-control" name="Name" placeholder="Name" type="text" style="width:300px">
    </div>
    <div class="form-group1">
      <label for="Email">*Email:</label>
      <input id="email" autocomplete="off" autofocus class="form-control" name="Email" placeholder="Email" type="email" style="width:300px">
  </div><br>
    <div class="form-group">
        <label for="Comments/Questions">Questions or Comments:</label><br>
        <textarea name="Questions/Comments" id="comments">Text</textarea>
    </div>
    <button class="btn btn-primary" type="submit">submit</button>
    </div>
</form> 
<script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbyRfyvgxkOCJbp0_vegoVR1qx04si7PphhAeNLZuoGAFKjUkfs/exec'
              const form = document.forms['test-form']

              form.addEventListener('submit', e => {
              e.preventDefault()
              fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => {
                  alert("Your question has been looked at and you should get a response via email soon.")
                  window.location.replace("/");
                })
                .catch(error => console.error('Error!', error.message))
            })
</script>
  </main>